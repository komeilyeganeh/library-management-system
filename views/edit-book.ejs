<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/global.css" />
<link rel="stylesheet" href="/form.css" />
</head>
<body>
    <%- include('./includes/navigation.ejs') %>
    <div class="container">
        <h2 class="form__title">Edit Book</h2>
        <form action="/edit-book" method="post" class="form">
            <input type="text" placeholder="Book Name" 
                name="bookName" value="<%= book.title %>">
            <input type="text" placeholder="Book Author" 
                name="bookAuthor" value="<%= book.authorName %>">
            <input type="text" placeholder="Book Pages" 
                name="bookPages" value="<%= book.pages %>">
            <input type="text" placeholder="Book Price" 
                name="bookPrice" value="<%= book.price %>">
            <input type="hidden" value="<%= book.id %>" name="bookId"/>
            <button type="submit">Edit</button>
        </form>
    </div>
</body>
</html>